  },

  "xrpl_access": {
    "mode": "read-only",
    "cluster": "Public Clio/Mainnet",
    "allowed_methods": [
      "server_state",
      "ledger",
      "account_info",
      "book_offers",
      "amm_info"
    ],
    "data_contracts": {
      "quotes": {
        "sources": ["book_offers", "amm_info"],
        "notes": [
          "Quotes must be computed live from XRPL order books and/or AMM pools.",
          "No hardcoded or cached prices beyond cache_ttl_seconds."
        ]
      }
    }
  },

  "security": {
    "auth": "none",
    "privacy": "No user data collected by this manifest.",
    "security_txt": "https://xrbitcoincash.com/.well-known/security.txt",
