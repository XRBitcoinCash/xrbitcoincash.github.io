{
  "name": "xrpl-proxy",
  "version": "1.1.0",
  "description": "Read-only XRPL JSON-RPC proxy for XRBitcoinCash (XRBC). No secrets; live on-ledger data only.",
  "private": true,
  "license": "MIT",
  "main": "server.js",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --signal SIGINT server.js",
    "health": "node -e \"fetch('http://localhost:'+(process.env.PORT||8787)+'/healthz').then(r=>{console.log(r.status);process.exit(r.ok?0:1)}).catch(e=>{console.error(e);process.exit(1)})\""
  },
  "dependencies": {
    "axios": "^1.7.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  },
  "keywords": [
    "XRPL",
    "JSON-RPC",
    "proxy",
    "XRBitcoinCash",
    "XRBC",
    "read-only",
    "security"
  ]
}
